<Page x:Class="SBCManagementSoftware.ViewAllShopsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SBCManagementSoftware"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="450" Width="800"
      Title="View All Shops ">

    <Grid Background="#FF2A2222">
        <Label Content="SOBELAN BUSINESS CENTER" FontSize="36" FontFamily="Trajan Pro" FontWeight="ExtraBold" Margin="0,0.485,0,399.515" Background="#FF3F3F46" HorizontalContentAlignment="Center">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
            </Label.Foreground>
        </Label>
        <TabControl Height="399.715" Margin="0,0,616.2,-0.2" VerticalAlignment="Bottom" Background="{x:Null}" BorderThickness="0">
            <StackPanel Orientation="Vertical" Margin="0,0,0.2,0.2">
                <TabItem Header="Home" Name="HomeButton" Background="#FF007ACC" Foreground ="White" FontWeight="DemiBold"  Height="50" Margin="-2,-2,0,0" HorizontalAlignment="Left" Width="181.6" MouseLeftButtonUp="HomeButton_MouseLeftButtonUp">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Shops" Name="ShopsButton" IsSelected="True" FontWeight="DemiBold"  Height="50" Margin="-2,0,0.2,0" MouseLeftButtonUp="ShopsButton_MouseLeftButtonUp">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Employees" Name="EmployeesButton" Background="#FF007ACC" Foreground ="White" Height="50" Margin="-2,0,0.2,0" MouseLeftButtonUp="EmployeesButton_MouseLeftButtonUp">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Legal Documents" Name="LegalButton" Background="#FF007ACC" Foreground ="White" FontWeight="DemiBold"  Height="50" Margin="-2,0,0.2,0" MouseLeftButtonUp="LegalDocumentsButton_MouseLeftButtonUp">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="About Us" Name="AboutButton" Background="#FF007ACC" Foreground ="White" FontWeight="DemiBold"  Height="50" Margin="-2,0,0.2,0" MouseLeftButtonUp="AboutUsButton_MouseLeftButtonUp">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </StackPanel>
        </TabControl>
        <Grid Name="MainContentPanel"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="616" Height="400" Margin="0,50,0,0" Panel.ZIndex="1" >
            <Grid.Background> <ImageBrush ImageSource="/SBC Management Software;component/01.jpg" Stretch="UniformToFill"/> </Grid.Background> <Grid.ColumnDefinitions>
                <ColumnDefinition Width="481*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>
 
            <Label Content="These are all your shops with their info." HorizontalAlignment="Left" Height="32" Margin="28,26,0,0" VerticalAlignment="Top" Width="336" FontSize="16" FontWeight="DemiBold" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <DataGrid SelectionMode="Single" SelectionUnit="FullRow" Name="DataGrid" ItemsSource="{Binding LoadDataBinding}" AutoGenerateColumns="False" HorizontalAlignment="Left" CanUserResizeColumns="False" CanUserResizeRows="False" Margin="28,63,0,50" Width="562" Grid.ColumnSpan="2" AlternatingRowBackground="#FF8C7EF8" CanUserAddRows="False" FontFamily="Segoe UI" FontWeight="DemiBold">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=ID}" Header="ID" IsReadOnly="True" Width="25"/>
                    <DataGridTextColumn Binding="{Binding Path=Floor}" Header="Floor Number" IsReadOnly="True" Width="40" />
                    <DataGridTextColumn Binding="{Binding Path=Status}" Header="Status" IsReadOnly="True"  Width="50"/>
                    <DataGridTextColumn Binding="{Binding Path=Area}" Header="Area" IsReadOnly="True"  Width="50"/>
                    <DataGridTextColumn Binding="{Binding Path=RentAmount}" Header="Amount" IsReadOnly="True" Width="55"/>
                    <DataGridTextColumn Binding="{Binding Path=RenterID}" Header="R.ID" IsReadOnly="True" Width="40"/>
                    <DataGridTextColumn Binding="{Binding Path=RenterFirstName}" Header="First Name" IsReadOnly="True" Width="80"/>
                    <DataGridTextColumn Binding="{Binding Path=RenterLastName}" Header="Last Name" IsReadOnly="True" Width="80"/>
                    <DataGridTextColumn Binding="{Binding Path=RenterPhoneNumber}" Header="Phone" IsReadOnly="True" Width="80"/>
                    <DataGridTextColumn Binding="{Binding Path=RentDuration}" Header="Duration" IsReadOnly="True" Width="58"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Rent Out Shop" HorizontalAlignment="Left" Margin="210,360,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="20" FontSize="10" FontFamily="Segoe UI" FontWeight="DemiBold"  Background="#FF007ACC" Foreground ="White"  Click="GoToRentOutShop_Click"/>
            <Button Content="Clear Out Shop" HorizontalAlignment="Left" Margin="340,360,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="20" FontSize="10" FontFamily="Segoe UI" FontWeight="DemiBold"  Background="#FF007ACC" Foreground ="White"  Click="GoToClearOutShop_Click"/>
            <Button Content="Modify Shop Details" HorizontalAlignment="Left" Margin="470,360,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="20" FontSize="10" FontFamily="Segoe UI" FontWeight="DemiBold"  Background="#FF007ACC" Foreground ="White"  Click="GoToModifyShop_Click"/>
        </Grid>
    </Grid>
</Page>
