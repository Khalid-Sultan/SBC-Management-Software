<Window x:Class="SBCManagementSoftware.DocumentViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:SBCManagementSoftware"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Generated Document" Height="700" Width="800">
    <Grid Background="Black">
        <DocumentViewer Name="DocViewer" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="613" Width="775"/>
        <Label Content="Here is the generated document for the client to sign on to." Foreground="White" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="22" VerticalAlignment="Top" Height="35" Width="775" Margin="10,10,0,0" Background="{x:Null}" FontWeight="DemiBold" Padding="1,1,1,1"/>

    </Grid>
</Window>
